@model Assignment.Models.UniCourse
@{
    ViewData["Title"] = "chooseCourse";
}

<h1>chooseCourse</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="chooseCourse">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Course</label>
                @Html.DropDownListFor(model => model.CourseName,
                (IEnumerable<SelectListItem>)ViewBag.courseList)
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            @Html.HiddenFor(model => model.UniId)
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
  
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

