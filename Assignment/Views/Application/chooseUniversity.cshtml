@model Assignment.Data.Models.Domains.University

@{
    ViewData["Title"] = "chooseUniversity";
}

<h1>chooseUniversity</h1>

<h4>University</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="chooseUniversity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>University</label>
                @Html.DropDownListFor(model => model.UniversityId,
                (IEnumerable<SelectListItem>)ViewBag.universityList)
                <span asp-validation-for="UniversityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
